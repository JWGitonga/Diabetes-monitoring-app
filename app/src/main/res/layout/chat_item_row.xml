<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:id="@+id/his_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="55dp"
            android:background="@drawable/chat_bubble_left"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/other_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/other_message"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:text="Name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/other_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other_name"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:maxEms="15"
                android:text="Lorem ipsum is just but another very expensive an non cost effective way to represent texts to be replaced later in code during execution so as to confirm rendering..."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/other_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/other_message"
                android:layout_alignEnd="@id/other_message"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:text="13 : 30  16/01/2021"
                android:textColor="#000000"
                android:textSize="10sp" />
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/other_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:src="@drawable/outline_account_circle_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/his_bubble"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_bubble_right"
        android:gravity="end">

        <TextView
            android:id="@+id/my_mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textColor="#000" />

        <TextView
            android:id="@+id/my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_mName"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:maxEms="20"
            android:text="Lorem ipsum is just but another very expensive an non
cost effective way to represent texts to be replaced later in code during
 execution so as to confirm rendering..." />

        <ImageView
            android:id="@+id/sent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/my_message"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/my_tTime"
            android:src="@drawable/done_all" />

        <TextView
            android:id="@+id/my_tTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_message"
            android:layout_alignRight="@id/my_message"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="5dp"
            android:text="13 : 30  16/01/2021"
            android:textColor="#fff"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>