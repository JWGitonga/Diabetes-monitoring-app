<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PatientsReadingsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patient_readings_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        tools:listitem="@layout/patient_reading_item"
        android:paddingEnd="10dp"
        app:spanCount="2"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager" />

    <ImageView
        android:id="@+id/no_readings_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238"
        app:srcCompat="@drawable/inbox_empty" />

    <TextView
        android:id="@+id/no_readings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="No readings yet"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/no_readings_iv"
        app:layout_constraintStart_toStartOf="@+id/no_readings_iv"
        app:layout_constraintTop_toBottomOf="@+id/no_readings_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>